@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="login-container text-center">
    <h2>Login</h2>
    <form method="post" action="@Url.Action("LoginPage", "Account")">
        <input type="text" name="username" placeholder="Username" required class="form-control mb-2" />
        <input type="password" name="password" placeholder="Password" required class="form-control mb-2" />
        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>
    <a href="@Url.Action("SignupPage", "Account")" class="text-muted mt-3 d-block">Don't have an account? Sign up</a>
</div>
