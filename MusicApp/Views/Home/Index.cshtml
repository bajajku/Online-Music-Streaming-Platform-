@using SpotifyMVC.Models;
@model List<Album>

<style>
    :root {
        --text-color: #e0e0e0;
        --primary-color: #1db954;
        --secondary-color: #535353;
    }

    .home-page {
        padding: 50px;
        background: linear-gradient(145deg, #1e1e1e, #2e2e2e);
        color: var(--text-color);
        font-family: Arial, sans-serif;
    }

    .featured-albums h2 {
        color: var(--primary-color);
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 30px;
    }

    .album-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .album-card {
        max-width: 220px;
        text-align: center;
        background: linear-gradient(145deg, #252525, #3a3a3a);
        border-radius: 12px;
        padding: 15px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.5);
        transition: transform 0.3s, box-shadow 0.3s;
        overflow: hidden;
    }

    .album-card:hover {
        transform: translateY(-10px);
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.8);
    }

    .album-card img {
        width: 100%;
        height: auto;
        border-radius: 10px;
        margin-bottom: 10px;
    }

    .no-image-placeholder {
        width: 100%;
        height: 200px;
        background-color: var(--secondary-color);
        color: var(--text-color);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
        border-radius: 10px;
        margin-bottom: 10px;
    }

    .album-card h4 {
        color: var(--primary-color);
        margin-bottom: 8px;
        font-size: 1.2rem;
    }

    .album-card .album-artists {
        color: var(--text-color);
        margin-bottom: 15px;
        font-size: 0.9rem;
    }

    .album-card .btn {
        color: var(--primary-color);
        border-color: var(--primary-color);
        transition: background-color 0.3s, color 0.3s;
    }

    .album-card .btn:hover {
        background-color: var(--primary-color);
        color: #fff;
    }
</style>

<div class="home-page">
    <div class="featured-albums">
        <h2>🌟 Featured Albums</h2>
        <div class="album-grid">
            @foreach (var album in Model)
            {
                <div class="album-card">
                    @if (album.Images != null && album.Images.Any())
                    {
                        <img src="@album.Images.FirstOrDefault()?.Url" alt="@album.Name Album Cover" class="album-cover" />
                    }
                    else
                    {
                        <div class="no-image-placeholder">No Image Available</div>
                    }

                    <h4>@album.Name</h4>
                    <p class="album-artists">
                        By @(album.Artists != null 
                            ? string.Join(", ", ((IEnumerable<Artist>)album.Artists).Select(a => a.Name)) 
                            : "Unknown Artist")
                    </p>
                    <a href="@Url.Action("AlbumDetails", "Music", new { id = album.Id })" class="btn btn-outline-primary">View Album</a>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <button class="btn btn-success add-to-playlist" onclick="addAlbumToUser('@album.Id')">+</button>
                    }
                </div>
            }
        </div>
    </div>
</div>
<script>
    function addAlbumToUser(albumId) {
        fetch('/User/AddAlbumToUser', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]').value
            },
            body: JSON.stringify({ albumId: albumId })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert(data.message);
            } else {
                alert(data.error || "Failed to add album.");
            }
        })
        .catch(error => console.error('Error:', error));
    }
</script>