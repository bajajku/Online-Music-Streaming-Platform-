@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Album Details";
}

<div class="album-details text-center">
    <h1>Album Title</h1>
    <div class="album-info">
        <img src="~/images/sample-album.jpg" alt="Album Cover" class="album-cover" />
        <h3>Artist Name</h3>
        <p>Release Date: January 1, 2024</p>
        <p>Genre: Pop</p>
    </div>

    <div class="album-songs mt-4">
        <h2>Songs</h2>
        <ul class="song-list">
            <li>Song Title 1 - 3:30</li>
            <li>Song Title 2 - 4:00</li>
            <li>Song Title 3 - 3:45</li>
            <li>Song Title 4 - 2:55</li>
        </ul>
    </div>
</div>

<style>
    .album-details {
        padding: 40px;
    }
    .album-info {
        margin-top: 20px;
        text-align: center;
    }
    .album-cover {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 5px;
    }
    .album-songs {
        margin-top: 30px;
    }
    .song-list {
        list-style-type: none;
        padding: 0;
    }
    .song-list li {
        margin-bottom: 10px;
    }
</style>
