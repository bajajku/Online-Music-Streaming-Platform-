<div class="playlist-container">
    <h2>Your Playlists</h2>
    <div class="row">
        @for (int i = 0; i < Model.Playlists.Count; i++)
        {
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Playlists[i]</h5>
                        <a href="@Url.Action("ViewPlaylist", "Playlist", new { id = i + 1 })"
                           class="btn btn-primary w-100">View Playlist</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .playlist-container {
        padding: 50px;
        background: linear-gradient(145deg, #1a1a1a, #2a2a2a);
        border-radius: 15px;
        color: var(--text-color);
    }

    .card {
        background: linear-gradient(145deg, #292929, #393939);
        color: var(--text-color);
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.7);
        }
</style>
