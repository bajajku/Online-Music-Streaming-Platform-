@model Playlist

<div class="playlist-details">
    <h2>@Model.Name</h2>
    <ul>
        @foreach (var song in Model.Songs)
        {
            <li>
                <strong>@song.Title</strong> by @song.Artist
                <span>(@song.Duration)</span>
            </li>
        }
    </ul>
</div>

<a href="@Url.Action("Index", "Playlist")" class="btn btn-secondary">Back to Playlists</a>
